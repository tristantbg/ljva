header
	position fixed
	top 0
	left 0
	height 6.8rem
	width 100vw
	white-space nowrap
	z-index 2
	background-color $main-bg-color
	background-color var(--main-bg-color)
	display inline-flex
	justify-content space-between
	z-index 20
	#current-page
		width 50%
		padding $padding
		cursor default
	[data-target=back]
		transition opacity 0 linear
		transition-delay 250ms
		+above($md + 1)
			&:hover
				h2
					display none
				&::after
					content 'Retour'
					color $main-title-color
					color var(--main-title-color)
	#site-title
		width 50%
		padding $padding
		text-align right
		+above($md + 1)
			&:hover
				h1
					display none
				&::after
					content 'Menu'

#main-menu
	position fixed
	top 0
	right $padding
	width "calc(50% - %s)" % $padding
	height 100%
	transition visibility $containerTransition linear
	visibility hidden
	z-index -1
	+below($md)
		width "calc(100% - %s)" % $padding
	.title
		padding $padding
		padding-bottom ($padding+0.1)
		text-align right
	#inner-menu
		position relative
		height "calc(100% - %s)" % ($headerSize)
		overflow-y scroll
		padding $padding 0 $padding $padding
		// background $main-text-color
		// background var(--main-text-color)
		ul
			span(1)
			li
				& > a
					display block
					padding ($padding/2) 0
					border-bottom 1px solid $main-text-color
					border-bottom 1px solid var(--main-text-color)
				&:first-child
					& > a
						border-top 1px solid $main-text-color
						border-top 1px solid var(--main-text-color)
				a:hover
					color $main-title-color
					color var(--main-title-color)

body.is-loading
	header [data-target=back]
		transition opacity ($containerTransition/2) ease
		transition-delay 0
		opacity 0

body.menu-visible
	#main-menu
		transition none
		visibility visible
	#site-title
		h1
			display none
		&::after
			content 'Fermer'
	#container
		+above($md + 1)
			transform "translateX(calc(-50% + %s)) translateZ(0)" % $padding
		+below($md)
			transform translateX(-100vw) translateZ(0)
	
		