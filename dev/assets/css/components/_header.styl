header
	position fixed
	top 0
	left 0
	height 6.8rem
	width 100%
	padding $padding
	white-space nowrap
	z-index 2
	background-color $main-bg-color
	background-color var(--main-bg-color)
	a
		display inline-flex
		width 100%
		justify-content space-between
	#site-title
		order 1
		+below($md)
			display none

body.menu-visible
	nav#menu
		transition transform $containerTransition $kinetic, color ($containerTransition/3) ($containerTransition/2) $kinetic
		color $primary
		transform translateZ(0)
		ul
			transform translateZ(0)
	
		