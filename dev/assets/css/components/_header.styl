header
	transition transform $containerTransition $kinetic, top 700ms ease
	position fixed
	top ($padding/2)
	left $padding
	white-space nowrap
	display inline-flex
	z-index 2
	cursor pointer
	#site-title
		order 1
	.section-title
		&.before
			order 0
		&.after
			order 2
		&#question-mark
			order 3
	#site-title, .section-title
		transition width 600ms ease
		overflow hidden
		&.hidden
			width 0 !important

body.fp-viewing-landing
	header
		+above($md + 1)
			top 25%

nav#menu
	transition transform $containerTransition $kinetic, color ($containerTransition/2) ease
	position fixed
	top 0
	left 0
	height 100%
	padding $padding
	z-index 10
	transform translateX(-100%) translateZ(0)
	background $secondary
	ul
		transition transform ($containerTransition*2/3) ($containerTransition/3.5) ease
		transform translateX(-50%) translateZ(0)
	li
		&:not(.active)
			a::after
				content '\2022\00a0'
				color $secondary !important
		&:not(.parent).active
			a::before
				content '\2022\00a0'

body.menu-visible
	nav#menu
		transition transform $containerTransition $kinetic, color ($containerTransition/3) ($containerTransition/2) $kinetic
		color $primary
		transform translateZ(0)
		ul
			transform translateZ(0)
	
		