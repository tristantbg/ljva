.event-page
	span(1)
	.featured-image
		span(4/12)
		height ($headerSize*8)
		&.fixed
			position fixed
		&:not(.fixed)
			//opacity 0
		img
			object-fit contain
			object-position top left
	.header-content
		span(6/12, $offset: 2/12)
		.event-calendar
			margin-top .3em
		.event-artists .title
			color $main-text-color !important
			color var(--main-text-color) !important
	.page-content
		span(6/12, $offset: 6/12)
		p
			line-height 1.4
			&:not(:last-child)
				margin-bottom 1em