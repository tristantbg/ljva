@keyframes background
	0%
		background-position 0 0
	100%
		background-position -100vw 0

#intro
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	padding-bottom $headerSize
	z-index 3
	background-color $main-panel-color
	background-color var(--main-panel-color)
	+below($md)
		display none
	img, video
		position absolute
		z-index 2
		top 0
		left 0
		width 100%
		height 100%
		object-fit contain
		object-position center
	.background
		animation background 40s linear infinite
		background-size cover
		background-repeat repeat
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index 1
		